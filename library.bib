doi = {10.1038/ngeo846},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Allison, Wallenstein, Bradford/Nature Geoscience/Allison, Wallenstein, Bradford - 2010 - Soil-carbon response to warming dependent on microbial physiology.pdf:pdf},
