file = {:Users/christiankrohn/Documents/Mendeley Desktop/Kyn{\v{c}}lov{\'{a}}, Hron, Filzmoser/Mathematical Geosciences/Kyn{\v{c}}lov{\'{a}}, Hron, Filzmoser - 2017 - Correlation Between Compositional Parts Based on Symmetric Balances.pdf:pdf},
issn = {18748953},
journal = {Mathematical Geosciences},
keywords = {Compositional data,Correlation analysis,Logratio transformations,Sequential binary partitioning,Symmetric balances},
title = {{Correlation Between Compositional Parts Based on Symmetric Balances}},
year = {2017}
