booktitle = {Frontiers in Microbiology},
doi = {10.3389/fmicb.2013.00324},
issn = {1664302X},
keywords = {Activity,Amino acids,Labeled substrate,Microbes,Soil,Sugars,Water},
title = {{Microbes in nature are limited by carbon and energy: The starving-survival lifestyle in soil and consequences for estimating microbial rates}},
year = {2013}
