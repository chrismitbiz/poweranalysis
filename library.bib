doi = {10.1371/journal.pcbi.1005752},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Rohart et al/PLoS Computational Biology/Rohart et al. - 2017 - mixOmics An R package for ‘omics feature selection and multiple data integration.pdf:pdf;:Users/christiankrohn/Documents/Mendeley Desktop/Rohart et al/PLoS Computational Biology/Rohart et al. - 2017 - mixOmics An R package for ‘omics feature selection and multiple data integration(2).pdf:pdf},
