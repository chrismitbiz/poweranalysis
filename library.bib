journal = {Soil Biology and Biochemistry},
keywords = {4-dichlorophenol,Mineralisation of phenol and 2,Quantitative PCR of rRNA genes,Soil microhabitats,Soil particle size fractions,Soil particle surfaces,Terminal-restriction fragment length polymorphism},
