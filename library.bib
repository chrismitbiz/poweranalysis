doi = {10.1038/s41396-019-0394-z},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Thomas, Corre, C{\'{e}}bron/ISME Journal/Thomas, Corre, C{\'{e}}bron - 2019 - Stable isotope probing and metagenomics highlight the effect of plants on uncultured phenanthrene-degrad.pdf:pdf},
issn = {17517370},
journal = {ISME Journal},
title = {{Stable isotope probing and metagenomics highlight the effect of plants on uncultured phenanthrene-degrading bacterial consortium in polluted soil}},
