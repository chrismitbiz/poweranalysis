doi = {10.1007/s10532-019-09871-0},
issn = {15729729},
journal = {Biodegradation},
keywords = {Biodegradation,Biotransformation,Carbon source,Next-generation sequencing,Pharmaceuticals and personal care products,Trace organic contaminants},
title = {{Impact of primary carbon sources on microbiome shaping and biotransformation of pharmaceuticals and personal care products}},
year = {2019}
