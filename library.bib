file = {:Users/christiankrohn/Documents/Mendeley Desktop/Maqbool et al/Environmental Science and Pollution Research/Maqbool et al. - 2016 - Perspectives of using fungi as bioresource for bioremediation of pesticides in the environment a critical review.pdf:pdf},
issn = {16147499},
journal = {Environmental Science and Pollution Research},
keywords = {Biodegradation,Bioremediation,Fungi,Metabolic pathways,Pesticides,enzymes},
title = {{Perspectives of using fungi as bioresource for bioremediation of pesticides in the environment: a critical review}},
