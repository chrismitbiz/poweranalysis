journal = {Chemosphere},
keywords = {Chemical spectroscopic and electrochemical charact,Electron mediator,Humin,Microbial reductive dechlorination,Pentachlorophenol},
title = {{Characterization of humins from different natural sources and the effect on microbial reductive dechlorination of pentachlorophenol}},
year = {2015}
