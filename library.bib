doi = {10.1007/s11104-005-5348-8},
issn = {0032079X},
journal = {Plant and Soil},
keywords = {13C,GC/C/IRMS,Rhizodeposition,Rhizosphere,Sugars,Wheat},
title = {{The dynamics of neutral sugars in the rhizosphere of wheat. An approach by 13C pulse-labelling and GC/C/IRMS}},
