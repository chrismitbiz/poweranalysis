doi = {10.3389/fenvs.2018.00161},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Gumiere et al/Frontiers in Environmental Science/Gumiere et al. - 2019 - Soil bacterial community associated with high potato production and minimal water use.pdf:pdf},
issn = {2296665X},
journal = {Frontiers in Environmental Science},
keywords = {Crop production,Microbial interaction,Precision irrigation,Soil health,Soil matric potential,Water use},
title = {{Soil bacterial community associated with high potato production and minimal water use}},
year = {2019}
}
