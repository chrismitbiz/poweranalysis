doi = {10.3389/fmicb.2018.01745},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Li et al/Frontiers in Microbiology/Li et al. - 2018 - Gut Microbiota in Tibetan Herdsmen Reflects the Degree of Urbanization.pdf:pdf},
issn = {1664-302X},
journal = {Frontiers in Microbiology},
title = {{Gut Microbiota in Tibetan Herdsmen Reflects the Degree of Urbanization}},
