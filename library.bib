doi = {10.3389/fmicb.2018.02007},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Nouioui et al/Frontiers in Microbiology/Nouioui et al. - 2018 - Genome-based taxonomic classification of the phylum actinobacteria.pdf:pdf},
