doi = {10.1071/SR13077},
file = {:Users/christiankrohn/Documents/Mendeley Desktop/Baldock et al/Soil Research/Baldock et al. - 2013 - Predicting contents of carbon and its component fractions in Australian soils from diffuse reflectance mid-infra.pdf:pdf},
issn = {1838675X},
journal = {Soil Research},
keywords = {Humus organic carbon,Mid-infrared spectroscopy,Partial least squares regression,Particulate organic carbon,Resistant organic carbon,Soil inorganic carbon,Soil organic carbon},
